{
  "compilerOptions": {
    "baseUrl": "./src",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "strict": true,
    "target": "ES2021",
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "./src/**/*.test.ts",
    "./jest.*.ts"
  ],
  "include": [
    "./src/**/*.ts"
  ]
}
